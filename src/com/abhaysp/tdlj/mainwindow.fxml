<BorderPane fx:id="mainBorderPane" fx:controller="com.abhaysp.tdlj.Controller" xmlns:fx="http://javafx.com/fxml">
	<top>
		<VBox>
			<MenuBar>
				<Menu text="File">
					<MenuItem text="New..." onAction="#showNewItemDialog" />
					<SeparatorMenuItem />
					<MenuItem text="Exit" />
				</Menu>
			</MenuBar>
			<ToolBar>
				<HBox>
					<Button text="New..." onAction="#showNewItemDialog">
						<graphic>
							<FontAwesomeIconView glyphName="CLOSE" glyphSize="24"/>
						</graphic>
					</Button>
				</HBox>
			</ToolBar>
		</VBox>
	</top>
	<left>
		<ListView fx:id="todoListView" onKeyPressed="#handleKeyPressed">

		</ListView>
	</left>
	<center>
		<VBox style="-fx-background-color: white">
			<!-- VBox will give prefHeight to its other children and all the rest of the space to TextArea -->
			<TextArea fx:id="itemDetailsTextArea" VBox.vgrow="ALWAYS" WrapText="true"/>
			<HBox>
				<Label text="Due: " style="-fx-background-color: white">
					<font>
						<Font name="Source Code Pro Bold" size="20"/>
					</font>
				</Label>
				<Label fx:id="deadlineLabel" style="-fx-background-color: white">
					<font>
						<Font name="Source Code Pro Bold" size="20"/>
					</font>
				</Label>
			</HBox>
		</VBox>
	</center>
</BorderPane>